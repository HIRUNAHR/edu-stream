FROM node:18-alpine AS builder
WORKDIR /app

# install dependencies
COPY package*.json ./
RUN npm ci

# build source
COPY tsconfig.json ./
COPY src ./src
RUN npm run build

# ---- runtime ----
FROM node:18-alpine
WORKDIR /app

# only production deps
COPY package*.json ./
RUN npm ci --omit=dev

# bring build artifacts
COPY --from=builder /app/dist ./dist

# run as non-root
USER node

EXPOSE 3001
CMD ["node", "dist/index.js"]
